{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/tir/tir-core-schema.json",
  "title": "TIR Core Schema (v0.1)",
  "type": "object",
  "required": [
    "tir_version",
    "case_id",
    "intent"
  ],
  "properties": {
    "tir_version": {
      "type": "string",
      "pattern": "^0\\.1(\\.\\d+)?$"
    },
    "case_id": {
      "type": "string",
      "minLength": 1
    },
    "intent": {
      "type": "object",
      "required": [
        "transaction_type",
        "asset_class",
        "parties",
        "jurisdiction",
        "timing"
      ],
      "properties": {
        "transaction_type": {
          "type": "string"
        },
        "asset_class": {
          "type": "string"
        },
        "parties": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "role",
              "party_type",
              "name"
            ],
            "properties": {
              "role": {
                "type": "string"
              },
              "party_type": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          }
        },
        "jurisdiction": {
          "type": "object",
          "required": [
            "country"
          ],
          "properties": {
            "country": {
              "type": "string",
              "const": "India"
            },
            "state": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "sector": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "timing": {
          "type": "string",
          "enum": [
            "instant",
            "staged",
            "conditional",
            "ongoing"
          ]
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "outputs": {
      "type": "object",
      "properties": {
        "classification": {
          "type": "object"
        },
        "structure_options": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "applicable_rule_packs": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "execution_plan": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "filings_checklist": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "tir_record": {
          "type": "object"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}